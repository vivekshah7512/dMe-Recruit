<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/base_dialog">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rectangle_wallet">

            <com.decideme.recruit.attributes.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Rating"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textSize="15sp"
                app:fontName="@string/font_bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl1"
            android:paddingLeft="12dp"
            android:background="#ecf0f1"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_ar_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/user" />

                <com.decideme.recruit.attributes.CustomTextview
                    android:id="@+id/tv_ar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:maxWidth="130dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/Black1"
                    android:textSize="13sp"
                    app:fontName="@string/font_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp">

                <RatingBar
                    android:id="@+id/rating_ar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"/>

                <com.decideme.recruit.attributes.CustomTextview
                    android:id="@+id/tv_rating_ar_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/Black1"
                    android:textSize="12sp"
                    app:fontName="@string/font_regular" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl2"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/rate_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5" />

            <com.decideme.recruit.attributes.CustomEditText
                android:id="@+id/et_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/rate_feild"
                android:padding="8dp"
                android:hint="Comments"
                android:gravity="top"
                android:textColor="@color/font_color"
                android:textSize="13sp"
                app:fontName="@string/font_regular" />

            <com.decideme.recruit.attributes.CustomButton
                android:id="@+id/btn_add_rating"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/btn_login"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:text="Submit"
                app:fontName="@string/font_bold"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>