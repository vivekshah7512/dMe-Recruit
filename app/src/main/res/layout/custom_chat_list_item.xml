<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/chat_date_background"
        android:visibility="gone">

        <com.decideme.recruit.attributes.CustomTextview
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textColor="@color/Black1"
            android:textSize="12sp"
            app:fontName="@string/font_regular" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_chat_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_to_background"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="8dp">

                <com.decideme.recruit.attributes.CustomTextview
                    android:id="@+id/tv_chat_to_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#97989A"
                    android:textSize="14sp"
                    app:fontName="@string/font_regular" />

                <com.decideme.recruit.attributes.CustomTextview
                    android:id="@+id/tv_chat_to_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#97989A"
                    android:textSize="12sp"
                    app:fontName="@string/font_light" />

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/arrow_to"
                android:rotation="270"
                android:scaleType="fitXY" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_chat_to"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chat_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_chat_from"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="-7dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/arrow_from"
                android:rotation="90"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_from_background"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="8dp">

                <com.decideme.recruit.attributes.CustomTextview
                    android:id="@+id/tv_chat_from_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#97989A"
                    android:textSize="14sp"
                    app:fontName="@string/font_regular" />

                <com.decideme.recruit.attributes.CustomTextview
                    android:id="@+id/tv_chat_from_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#97989A"
                    android:textSize="12sp"
                    app:fontName="@string/font_light" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>