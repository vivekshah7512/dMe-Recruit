<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/font_color</item>
        <item name="colorPrimaryDark">@color/font_color</item>
        <item name="colorAccent">@color/font_color1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.GifView" parent="@android:style/Widget"></style>

    <!-- Animation for dialog box -->

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Black1</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#D8D8D8</item>
        <item name="colorControlActivated">#FFDA24</item>
    </style>

</resources>
